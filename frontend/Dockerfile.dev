# Frontend Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Default API URL - browser will call this URL directly
# Override with: docker run -e VITE_API_BASE_URL=http://your-backend:8000
ENV VITE_API_BASE_URL=http://localhost:8000

# Expose Vite dev server port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
